        xmlns:p="clr-namespace:Hotels.Configurator.Properties"
        xmlns:local="clr-namespace:Hotels.Configurator"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Hotels Configurator" Height="579.843" Width="581.25">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="40*"/>
